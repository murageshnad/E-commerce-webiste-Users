<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport"
    content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="{{host}}/css/bootstrap.min.css">
  <link href="{{host}}/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="{{host}}/css/font-awesome.min.css">
  <link rel="stylesheet" href="{{host}}/css/product.css">
  <link rel="stylesheet" href="{{host}}/css/style.css">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <title>DMART STORE</title>
  <style>
    .backgrounds {
      background-color: lightyellow;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
          data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href="/home/index" style="color:goldenrod;"><strong>DMART STORE</strong></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        {{#if user}}
        <ul class="nav navbar-nav">
          <li class="active"><a href="javascript:">{{ user.name }} <span class="sr-only">(current)</span></a></li>
        </ul>
        {{/if}}
        <ul class="nav navbar-nav navbar-right">
          {{#if user}}

          <li>
            <a href="/home/cart/">
              <i class="fa fa-shopping-cart" aria-hidden="true"></i> Cart Details
              <span id="qty" class="w3-badge w3-green"></span>

            </a>
          </li>

          <li class="dropdownsa">
            <a href="/users/logout" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user"
                aria-hidden="true"></i> Logout</a>
          </li>
          {{else}}
          <li><a href="/users/login" style="color: goldenrod;"><strong>LOGIN</strong></a></li>
          <li><a href="/users/register" style="color: goldenrod;"><strong>Register</strong></a></li>
          {{/if}}
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  {{{body}}}

  <script type="text/javascript" src="{{host}}/js/jquery.min.js"></script>
  <script type="text/javascript" src="{{host}}/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="{{host}}/js/product.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <!-- Popper.JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"
