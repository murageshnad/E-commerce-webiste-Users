<header>

</header>
<main>

    <body>
        <div class="container" id="home">
            <div class="">

                <h1>Welcome to our DMart store!</h1>


            </div>
            <br>
            <div class="padding-20"></div>
            <div class="col-md-10">
                {{#if success_msg}}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <strong>{{success_msg}}</strong>
                </div>
                {{/if}}
            </div>
            <!--cart shopping-->
            <h4> </h4>
            {{# each products }}
            <div class="row text-center">
                {{# each this }}
                <div class="col-md-3 col-sm-2">
                    <div class="thumbnail">

                        <img src="{{ this.imagePath }}" alt="Product" class="w3-round" style="padding:0px;width:88%;">
                        <div class="caption">
                            <h3 class="title">{{this.title}}</h3>
                            <p class="price-u">Rs.{{ this.price }}</p>
                            <a href="" class="btn btn-success add" role="button" id-data="0"
                                data-type="{{this._id}}">Add
                                Cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
        <div class="padding-20"></div>
</main>
</body>