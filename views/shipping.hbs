<header>

</header>
<main>
    <div class="container">
        <h2 style="color:orange;"> Add Delivery Address</h2>
        <div class="col-md-10">
            {{#if success_msg}}
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <strong>{{success_msg}}</strong>
            </div>
            {{/if}}
        </div>
        <div class="col-md-10 col-sm-2">
            <form action="/cart/shipping" method="post">
                <div class="form-group">

                    <input type="text" class="form-control col-3" id="name" name="name" placeholder="Full Name"
                        style="width: 400px;" required>
                </div>
                <div class="form-group">

                    <input type="number" class="form-control col-3" id="mobile" name="mobile"
                        placeholder="Mobile Number" required>
                </div>
                <div class="form-group">

                    <input type="number" class="form-control col-3" id="pincode" name="pincode" placeholder="PinCode">
                </div>
                <div class="form-group">

                    <input type="text" class="form-control col-3" id="address" name="address"
                        placeholder="Area,colony,street" required>
                </div>
                <div class="form-group">

                    <input type="text" class="form-control col-3" id="city" name="city" placeholder="Town/city"
                        required>
                </div>
                <div class="form-group">

                    <input type="text" class="form-control col-3" id="state" name="state" placeholder="State" required>
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-info">Add Address</button>
                </div>
            </form>
        </div>
    </div>
    <div class="padding-20"></div>
</main>